<div class="auditorium-header">
  <h3>Auditorium Set-up</h3>
</div>

<div class="form-group">
  <label for="movie_title" class="col-sm-2 col-sm-offset-2 control-label">Movie Title:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="name" value=""></input>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :seating_capacity, class: "col-sm-2 col-sm-offset-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :seat_max, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-5">
        <%= f.submit class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
