{% extends "layout.html.twig" %}

{% block content %}

<div id="update_movie">
  <h3>Update Details for {{movie.movie_name}} </h3>

  <br>
  <br>

  <form class="form-horizontal" action="/movie/{{movie.id}}/edit" method="post">
    <div>
      <input type="hidden" name="id" value="{{movie.id}}"></input>
    </div>
    <div class="form-group">
      <label for="movie_title" class="col-sm-2 col-sm-offset-2 control-label">Movie Title:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" name="movie_name" value="{{movie.movie_name}}"></input>
        </div>
      </div>
      <div class="form-group">
        <label for="rating" class="col-sm-2 col-sm-offset-2 control-label">Rated:</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="rating" value="{{movie.rating}}"></input>
          </div>
        </div>
      <div class="form-group">
        <label for="now_playing" class="col-sm-2 col-sm-offset-2 control-label">Now Playing:</label>
          <div class="col-sm-4">
            <label class="radio-inline">
              <input type="radio" class="" name="playing_now" value="{{movie.playing_now}}">Yes</input>
            </label>
            <label class="radio-inline">
              <input type="radio" class="" name="playing_now" value="{{movie.playing_now}}">No</input>
            </label>
          </div>
        </div>
        <div class="form-group">
          <label for="coming_soon" class="col-sm-2 col-sm-offset-2 control-label">Coming Soon:</label>
            <div class="col-sm-4">
              <label class="radio-inline">
                <input type="radio" class="" name="upcoming" value="{{movie.upcoming}}">Yes</input>
              </label>
              <label class="radio-inline">
                <input type="radio" class="" name="upcoming" value="{{movie.upcoming}}">No</input>
              </label>
            </div>
          </div>
        <div class="form-group">
          <label for="movie_id" class="col-sm-2 col-sm-offset-2 control-label">Movie ID:</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" name="omdb_id" value="{{movie.omdb_id}}"></input>
            </div>
          </div>
        <div class="form-group">
          <label for="movie_poster" class="col-sm-2 col-sm-offset-2 control-label">Movie Poster:</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" name="omdb_poster" value="{{movie.omdb_poster}}"></input>
            </div>
          </div>
        <div class="form-group">
          <label for="official_trailer" class="col-sm-2 col-sm-offset-2 control-label">Official Trailer:</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" name="youtube" value="{{movie.youtube}}"></input>
            </div>
          </div>
        <div class="col-sm-6 control-label">
          <button class="btn btn-default" type="submit" name="submit" value="submit">Update Movie</button>
        </div>
      </form>
    </div>

{% endblock %}
