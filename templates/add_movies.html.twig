{% extends "layout.html.twig" %}

{% block content %}
  <div class="movie-header">
    <h3>Add Movies Playing</h3>
  </div>

  <form class="form-horizontal" action="/add_movies" method="post">
    <div class="form-group">
      <label for="movie_title" class="col-sm-2 col-sm-offset-2 control-label">Movie Title:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" name="name" value=""></input>
        </div>
      </div>
    <div class="form-group">
      <label for="rating" class="col-sm-2 col-sm-offset-2 control-label">Rated:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" name="rating" value=""></input>
        </div>
      </div>
    <div class="form-group">
      <label for="rating" class="col-sm-2 col-sm-offset-2 control-label">Now Playing:</label>
        <div class="col-sm-4">
          <label class="radio-inline">
            <input type="radio" class="" name="playing now" value="true">Yes</input>
          </label>
          <label class="radio-inline">
            <input type="radio" class="" name="playing now" value="false">No</input>
          </label>
        </div>
      </div>
      <div class="form-group">
        <label for="rating" class="col-sm-2 col-sm-offset-2 control-label">Coming Soon:</label>
          <div class="col-sm-4">
            <label class="radio-inline">
              <input type="radio" class="" name="coming soon" value="true">Yes</input>
            </label>
            <label class="radio-inline">
              <input type="radio" class="" name="coming soon" value="false">No</input>
            </label>
          </div>
        </div>
      <div class="form-group">
        <label for="rating" class="col-sm-2 col-sm-offset-2 control-label">Movie ID:</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="omdb_id" value=""></input>
          </div>
        </div>
      <div class="form-group">
        <label for="rating" class="col-sm-2 col-sm-offset-2 control-label">Movie Poster:</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="omdb_poster" value=""></input>
          </div>
        </div>
      <div class="form-group">
        <label for="rating" class="col-sm-2 col-sm-offset-2 control-label">Official Trailer:</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="youtube" value=""></input>
          </div>
        </div>
      <div class="col-sm-6 control-label">
        <button class="btn btn-default" type="submit" name="submit" value="submit">Submit</button>
      </div>
    </form>
    
{% endblock %}
