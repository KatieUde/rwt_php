{% extends 'layout.html.twig' %}

{% block content %}

<div class="ticket-type-header">
  <h3> Update Details for a(n) {{ticket_detail.ticket_style}}</h3>
</div>

<div>
  <form class="form-horizontal" action="/ticket_detail/{{ticket_detail.id}}/edit" method="post">
    <div>
      <input type="hidden" name="id" value="{{ticket_detail.id}}"></input>
    </div>
  <div class="form-group">
    <label for="ticket_type" class="col-sm-2 col-sm-offset-2 control-label">Ticket Type:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="ticket_style" value="{{ticket_detail.ticket_style}}"></input>
    </div>
  </div>
  <div class="form-group">
    <label for="ticket_price" class="col-sm-2 col-sm-offset-2 control-label">Ticket Price:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="ticket_cost" value="{{ticket_detail.ticket_cost}}"></input>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-6 col-sm-5">
      <button class="btn btn-default" type="submit" name="submit" value="submit">Update Ticket Type</button>
    </div>
  </div>
</div>

{% endblock %}
