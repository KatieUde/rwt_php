{% extends 'layout.html.twig' %}

{% block content %}

  <div class="auditorium-header">
    <h3>Auditorium Set-up</h3>
  </div>

  <!-- FORM FOR NEW AUDITORIUM CREATION -->
<div id="new-auditorium-form">
  <form class="form-horizontal" action="/viewing_rooms" method="post">
    <div class="form-group">
      <label for="auditorium" class="col-sm-2 col-sm-offset-2 control-label">Room Number:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" name="room_number" value=""></input>
        </div>
      </div>
    <div class="form-group">
      <label for="seating_capacity" class="col-sm-2 col-sm-offset-2 control-label">Seating Capacity:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" name="seat_max" value=""></input>
        </div>
      </div>
    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-5">
        <button class="btn btn-default" type="submit" name="submit" value="submit">Create Viewing Room</button>
      </div>
    </div>
  </form>
</div>
  <!-- EDIT EXISTING AUDITORIUMS -->

  <div class="auditorium-header">
    <h3>Edit Auditoriums</h3>
  </div>

  <div class="col-md-7 col-sm-offset-2" id="auditorium-list">
    <table class="table">
      <tbody>
        <tr>
          <th class="table_head">Screening Room</th>
          <th class="table_head">Seating Capacity</th>
          <th class="table_head">Update</th>
          <th class="table_head">Remove</th>
          </tr>
            {% for viewing_room in viewing_rooms %}
          <tr>
            <td class="table_body">{{viewing_room.room_number}}</td>
            <td class="table_body">{{viewing_room.seat_max}}</td>
              <td class="table_body">
                <a href="/viewing_room/{{viewing_room.id}}/edit">Edit</a>
              </td>
              <td class="table_body">
                <a href="/viewing_room/{{viewing_room.id}}/delete">Delete</a>
              </td>
              {% endfor %}
          </table>
        </div>


{% endblock %}
